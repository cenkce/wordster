{
    "compilerOptions": {
      "target": "ESNext",
      "lib": [
        "dom",
        "dom.iterable",
        "esnext"
      ],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "noFallthroughCasesInSwitch": true,
      "module": "ESNext",
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "noEmit": false,
      "sourceMap": true,
      "outDir": "dist",
      "declaration": true,
      "declarationDir": "."
    },
    "exclude": ["dist"],
    "include": [
      "src"
    ]
  }
  